<body>

    <div id="matrix"></div>

    <div class="content-overlay">
        <div class="slide-container">
            <div class="quote-text" id="quote">
                "Setiap napas yang lebih bersih adalah hadiah terbaik untuk masa depanmu."
            </div>
            <button class="btn-next" id="mainBtn" onclick="nextQuote()">Pesan Berikutnya</button>
        </div>
    </div>

<script>
    // EFEK HUJAN TEKS
    const matrixContainer = document.getElementById('matrix');
    const message = "PILIH NAPASMU PILIH MASA DEPANMU ";
    
    function createRain() {
        const columnCount = Math.floor(window.innerWidth / 50);
        for (let i = 0; i < columnCount; i++) {
            const span = document.createElement('span');
            span.className = 'falling-text';
            span.innerText = message.repeat(5);
            span.style.left = (i * 50) + "px";
            span.style.animationDuration = (Math.random() * 5 + 5) + 's';
            span.style.animationDelay = '-' + (Math.random() * 5) + 's';
            matrixContainer.appendChild(span);
        }
    }
    createRain();

    // LOGIKA SLIDE
    const quotes = [
        "Setiap napas yang lebih bersih adalah hadiah terbaik untuk masa depanmu.",
        "Sayangi dirimu, sayangi paru-parumu. Kamu sangat berharga.",
        "Mulai hari ini, pilih udara segar untuk hidup yang lebih bugar.",
        "Langkah kecil hari ini akan menjadi kemenangan besar di masa depan."
    ];

    let currentIndex = 0;

    function nextQuote() {
        const quoteElement = document.getElementById("quote");
        const btn = document.getElementById("mainBtn");
        
        currentIndex++;

        if (currentIndex < quotes.length) {
            quoteElement.style.opacity = 0;
            setTimeout(() => {
                quoteElement.innerText = `"${quotes[currentIndex]}"`;
                quoteElement.style.opacity = 1;
            }, 400);
        } 
        else if (currentIndex === quotes.length) {
            // TAMPILAN KERTAS PENUTUP
            quoteElement.style.opacity = 0;
            setTimeout(() => {
                quoteElement.innerHTML = `
                    <div class="paper-note">
                        <div class="final-text">
                            TERIMA KASIH SUDAH MEMBACA.<br><br>
                            di setiap sudut sepi ada suara batuk yang selalu ter ngiang ngiang
                            di kepala anak kecil ini dan selalu membawa ketakutan ketika melangkah maju.
                            -LEA
                        </div>
                    </div>
                `;
                quoteElement.style.opacity = 1;
                btn.innerText = "Ulangi Dari Awal";
            }, 400);
        } 
        else {
            // RESET
            currentIndex = 0;
            quoteElement.style.opacity = 0;
            setTimeout(() => {
                quoteElement.innerHTML = `"${quotes[0]}"`;
                quoteElement.style.opacity = 1;
                btn.innerText = "Pesan Berikutnya";
            }, 400);
        }
    }
</script>

</body>
</html>
