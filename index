    <title>Langkah Baru - Harapan</title>
    <style>
        /* 1. DASAR TAMPILAN */
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #0a0a0a;
            color: white;
            overflow: hidden;
        }

        /* 2. LATAR BELAKANG HUJAN TEKS */
        #matrix {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
            pointer-events: none;
        }

        .falling-text {
            position: absolute;
            top: -250px;
            color: #4CAF50;
            font-size: 14px;
            font-weight: bold;
            writing-mode: vertical-rl;
            text-orientation: mixed;
            white-space: nowrap;
            opacity: 0.15;
            animation: fall linear infinite;
        }

        @keyframes fall {
            0% { transform: translateY(-100px); }
            100% { transform: translateY(110vh); }
        }

        /* 3. KONTEN UTAMA */
        .content-overlay {
            position: relative;
            z-index: 10;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: radial-gradient(circle, rgba(0,0,0,0) 0%, rgba(0,0,0,0.8) 100%);
        }

        .slide-container {
            max-width: 90%;
            width: 600px;
            padding: 20px;
        }

        .quote-text {
            font-size: 2rem;
            font-weight: 300;
            margin-bottom: 40px;
            transition: opacity 0.5s ease;
            min-height: 150px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* 4. GAYA KERTAS PENUTUP */
        .paper-note {
            background: #fdfdfd;
            color: #222;
            padding: 40px;
            border-radius: 2px;
            box-shadow: 12px 12px 0px rgba(76, 175, 80, 0.4);
            transform: rotate(-1.5deg);
            border-left: 8px solid #4CAF50;
            text-align: left;
            position: relative;
        }

        .final-text {
            font-family: 'Courier New', Courier, monospace;
            font-size: 1.3rem;
            font-weight: bold;
            line-height: 1.6;
            color: #333;
        }

        /* 5. TOMBOL */
        .btn-next {
            background-color: #4CAF50;
            color: white;
